{
    "title": "Global hotkeys to run appss",
    "rules": [
        {
            "description":"Ctrl+V to run VS Code",
            "manipulators": [
                {
                    "from": {
                        "key_code": "v",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [ { "shell_command": "open -a 'Visual Studio Code'" } ],
                    "type": "basic"
                }
            ]
        },
        {
            "description":"Ctrl+N to run Notes",
            "manipulators": [
                {
                    "from": {
                        "key_code": "n",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [ { "shell_command": "open -a Notes" } ],
                    "type": "basic"
                }
            ]
        }
    ]
  }
  